{% extends 'base.html.twig' %}

{% block title %}Hello ArticlesController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <a href="/article/new">Ajouter</a>
    <table>
        <thead>
            <tr>
                <th>Titre</th>
                <th>Prix</th>
                <th colspan="3">Opération</th>
            </tr>
        </thead>
        <tbody>
            {% for article in articles %}
                <tr>
                    <td>{{ article.title }}</td>
                    <td>{{ article.price }} €</td>
                    <td><a href='article/get/{{ article.id }}'>Voir</a></td>
                    <td><a href='article/edit/{{ article.id }}'>Modifier</a></td>
                    <td><a href='article/delete/{{ article.id }}'>Supprimer</a></td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
